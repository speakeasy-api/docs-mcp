{
  "name": "@speakeasy-api/docs-mcp-playground",
  "version": "0.5.0",
  "description": "Interactive web playground for demonstrating and exploring a docs-mcp server",
  "license": "AGPL-3.0-only",
  "type": "module",
  "author": "Speakeasy <info@speakeasy.com> (https://speakeasy.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/speakeasy-api/docs-mcp.git",
    "directory": "packages/playground"
  },
  "homepage": "https://github.com/speakeasy-api/docs-mcp",
  "bugs": {
    "url": "https://github.com/speakeasy-api/docs-mcp/issues"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "docs-mcp-playground": "dist/server.js"
  },
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prepack": "node ../../scripts/check-workspace-protocol.mjs",
    "prepublishOnly": "pnpm run build",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "vite build",
    "build": "pnpm build:server && pnpm build:client",
    "dev:server": "node --import tsx src/server.ts",
    "dev:client": "vite",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.12.11",
    "@assistant-ui/react-ai-sdk": "^1.1.16",
    "@assistant-ui/react-markdown": "^0.12.0",
    "@gram-ai/elements": "^1.27.3",
    "@json-render/react": "^0.2.0",
    "express": "^4.21.0",
    "http-proxy-middleware": "^3.0.5",
    "motion": "^12.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^3.20.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@speakeasy-api/eslint-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vite": "^6.0.0"
  }
}
